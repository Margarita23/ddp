<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="student_container">
    <div class="field">
      <%= form.label "ПІБ" %><br />
      <%= form.text_field :full_name, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label "Тема диплому" %><br />
      <%= form.text_field :theme, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label "Керівник" %><br />
      <div class="from-list">
        <div class="btn btn-outline-secondary btn_enter-manually">Вписати керівника вручну</div>
        <%= form.select(:teacher_id, [""] + @teachers.map { |teacher| [ "#{teacher.last_name} #{teacher.first_name} #{teacher.patronymic}", teacher.id ] }, {selected: ""}, { class: "form-select teacher_enter-from-list" }) %>
      </div>
      <div class="manual">
        <div class="btn btn-outline-secondary btn_enter-from-list">Вибрати керівника зі списку викладачів</div>
        <%= form.text_field :leader, class: "form-control teacher_enter-manually" %>
      </div>
    </div>

    <div class="field">
      <%= form.label "Дата захисту" %><br />
      <%= form.date_field :date, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: "form-control" %>
    </div>

      <%= form.submit "Додати студента", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
