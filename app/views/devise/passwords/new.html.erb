<div class="wrapper login">
  <section class="forgot-pass-form">
    <h2><%= t('devise.passwords.new.forgot_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@example.com" %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'), class: "btn btn-success btn-lg btn-forgot-pass" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>
</div>
