<div class="wrapper login">
  <section class="login-form">
        <h2><%= t('devise.sessions.new.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@example.com" %>
      </div>

      <div class="field">
        <%= f.label t('activerecord.attributes.user.password'), class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('devise.sessions.new.sign_in'), class: "btn btn-success btn-lg" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>
</div>
