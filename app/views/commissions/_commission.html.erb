<div id="<%= dom_id commission %>">
  <p>
    <strong>Назва комісії:</strong>
    <%= commission.name %>
  </p>

  <p>
    <strong>Номер комісії:</strong>
    <%= commission.number %>
  </p>

  <div>
    <strong>Голова комісії:</strong>
    <p><%= Teacher.find(commission.head_id).lfp %></p>
    <strong>Члени комісії:</strong>
    <% commission.teacher_ids.each do |teacher_id| %>
      <p><%= Teacher.find(teacher_id).lfp %></p>
    <% end %>
  </div>

</div>
